@using DarazApp.Services;
@model DarazApp.Services.ViewModel;
@{
    ViewBag.Title = "AddPoductsWithSpecifications";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

        <div class="container">

            <div class="card mb-4 bg-gray" id="maincard">
                <article class="card-body">
                    <h4 class="mb-4">Submit product</h4>

                    <div class="row mb-4">
                        <label class="col-3 col-form-label">Category</label>
                        <div class="col-9">
                            <select class="form-select" id="KidCategoryName"></select>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="col-3 col-form-label">Title</label>
                        <div class="col-9">
                            <input type="text" id="ProductName" class="form-control" placeholder="Product Name here">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="col-3 col-form-label">Price</label>
                        <div class="col-9">
                            <input type="text" id="ProductPrice" class="form-control" placeholder="Product Price">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="col-3 col-form-label">Quantity</label>
                        <div class="col-9">
                            <input type="text" id="ProductQuantity" class="form-control" placeholder="Quantity">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="col-3 col-form-label"> </label>
                        <div class="col-9">
                            <input type="file" name="file" id="file" onchange="previewFile(this);" />
                            <img id="previewImg" src="" width="50px" height="50px" alt="Placeholder" />
                        @*<input type="file" id="multiple" name="multiple" multiple="multiple" onchange="previewFile(this);"/>*@
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="col-3 col-form-label"> </label>
                        <div class="col-9">
                            <input type="file" id="multiple" name="multiple" multiple="multiple" onchange="previewimage(this);" />
                            <img id="previewImg5" src="" width="50px" height="50px" alt="Placeholder" />
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="col-3 col-form-label">Description</label>
                        <div class="col-9">
                            <textarea class="form-control" id="ProductDes" placeholder="Product Description"></textarea>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-9 offset-3">
                            <button type="button" id="btnnew" class="btn btn-primary">Save & Next</button>
                            <button type="reset" class="btn btn-outline-danger">Cancel</button>
                        </div>
                    </div>

                </article>
            </div>

        </div>